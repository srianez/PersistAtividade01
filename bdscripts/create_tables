CREATE SCHEMA `scjperat01` ;

CREATE TABLE CLIENTES (
    IDCLIENTE INT(11) NOT NULL PRIMARY KEY AUTO_INCREMENT,
    NOME VARCHAR(45) NOT NULL,
    EMAIL VARCHAR(455) NOT NULL
);


CREATE TABLE PEDIDOS (
    IDPEDIDO INT(11) NOT NULL PRIMARY KEY AUTO_INCREMENT,
	IDCLIENTE INT(11) NOT NULL,
    DATA DATETIME NOT NULL,
	DESCRICAO VARCHAR(45),
    VALOR DOUBLE NOT NULL
);

ALTER TABLE PEDIDOS ADD FOREIGN KEY (IDCLIENTE) REFERENCES CLIENTES(IDCLIENTE);